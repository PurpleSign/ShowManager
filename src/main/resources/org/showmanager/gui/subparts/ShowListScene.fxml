<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="org.showmanager.gui.controller.subparts.ShowListSceneController">
   <children>
      <Label fx:id="lShowListTitle" minHeight="-Infinity" minWidth="-Infinity" text="Alle Serien">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="lShowListTotalNumber" text="Anzahl: " />
      <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="-Infinity" minWidth="-Infinity">
         <content>
            <VBox>
               <children>
                  <TableView fx:id="tbShowListTable" minHeight="-Infinity" minWidth="-Infinity">
                     <columns>
                        <TableColumn fx:id="tcShowListNames" editable="false" minWidth="200.0" prefWidth="-1.0" sortable="false" text="Serie" />
                        <TableColumn fx:id="tcShowListRatings" editable="false" minWidth="75.0" prefWidth="-1.0" sortable="false" text="Bewertung" />
                        <TableColumn fx:id="tcShowListGenres" editable="false" minWidth="150.0" prefWidth="-1.0" sortable="false" text="Genres" />
                        <TableColumn fx:id="tcShowListHosts" editable="false" minWidth="100.0" prefWidth="-1.0" sortable="false" text="Host" />
                        <TableColumn fx:id="tcShowListURLs" editable="false" minWidth="150.0" prefWidth="-1.0" sortable="false" text="URL" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
